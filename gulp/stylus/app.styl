@import "fn.styl"
@import "theme.styl"

// nvue

.flex
	flex-direction column

.flex-center-column
	align-items center
	flex-direction column
	
.fz30
	font-size 30px
.fz32
	font-size 32px
.fz34
	font-size 34px
.fz36
	font-size 36px


.app-footer
	position fixed
	left 0
	right 0
	bottom 0
	z-index 2
	background-color #111118
	padding 5px 0
	// border-style solid
	// border-top-width 1px
	// border-color rgba(#fff, .3)
	
.app-footer-ul
	flex-direction row
	
	
.app-footer-li
	flex 1
	height 90upx
	flex-direction column
	align-items center
	justify-content center
	
.app-footer-li-white
	color rgba(#fff, .6)
	font-size 24px
	margin-top 6px
	
.app-footer-li-ico
	widthZ 45px
	
.app-footer-li-active
	color bg
	
.app-footer-li-center
	widthZ 76px
	border-radius 50%
	overflow hidden
	
.app-footer-li-ico1
	widthZ 76px
	
.home-video-wrap
	flex 1
	
.home-myvideo
	flex 1

.home-personal
	position fixed
	right 30upx
	z-index 2
	bottom 160px
		
.home-personal-img
	width 70px
	height 70px
	
.home-personal-img1
	widthZ 90px
	
.home-personal-img2
	widthZ 50px
	position absolute
	left 26px
	top 22px
	border-radius 50%
	
.home-personal-li
	margin-top 40px
	flex-direction column
	justify-content center
	align-items center
	position relative
	
.home-personal-li-last
	margin-top 100px
	
.home-personal-span
	color #FFFFFF
	font-size 24px
	margin-top 4px
	
.h-picture
	position relative
	width 100px
	height 120px

.h-pict
	border-radius 50%
	flex-direction column
	justify-content center
	align-items center
	border-style solid
	border-color #fff
	border-width 3px
	
.h-pict-image
	width 96px
	height 96px
	border-radius 50%
	
.h-add-ico-wrap
	position absolute
	left 0
	right 0
	bottom 0
	flex-direction row
	justify-content center
	
.h-add-ico
	widthZ 40px
	
.home-content
	position fixed
	left 30px
	bottom 120px
	flex-direction column
	width 405px

.content-title
	color #fff
	font-size 30px
	font-weight bold

.content-desc
	color #fff
	font-size 30px
	margin-top 20px
	line-height 40px
.music-name
	flex-direction row
	align-items center
	margin-top 20px
	

.music-image
	width 34px
	height 34px
.play-status
	position fixed
	left 0
	right 0
	height 100px
	z-index 1
	flex-direction row
	justify-content center
	align-items center
	
.play-status-img
	widthZ 80px
	opacity .6


// 视频选择	

.pub-video-select
	position fixed
	z-index 1
	bottom 0
	left 0
	right 0
	top 0
	
.pub-video-ul
	height 360px
	background-color #fff
	border-top-right-radius 30px
	border-top-left-radius 30px
	flex-direction row
	justify-content space-between
	padding 0 90px
	position absolute
	left 0
	right 0
	bottom 0
	
.pub-video-li
	width 240px
	text-align center
	align-items center
	justify-content center
	height 280px
	
.pub-video-img
	widthZ 60px
	
.pub-video-text
	color #333
	margin-top 20px
	font-size 30px

.pub-video-close
	position absolute
	bottom 20px
	left 0
	right 0
	justify-content center
	align-items center
	
.pub-video-close-wrap
	width 76px
	height 76px
	border-radius 50%
	background-color rgba(#ccc, .2)
	justify-content center
	align-items center
	
.pub-video-close-img
	width 30px
	height 30px
	opacity .7

// 搜索
.home-search
	position fixed
	left 0
	right 0
	height 100px
	justify-content space-between
	flex-direction row
	
.home-search-center
	width 200px
	height 100px
	flex-direction row
	justify-content space-between
	align-items center

.home-search-title
	flex-direction column
	justify-content center
	align-items center
	position relative
	height 70px
	
.home-search-title-txt
	color #fff
	opacity .6
	font-size 36px
	font-weight bold
	
.home-search-title-active
	opacity 1

.home-search-title-line
	background-color #fff
	border-radius 10px
	height 4px
	position absolute
	bottom 0
	left 16px
	right 16px
	
.search-fr
	align-items center
	height 100px
	width 100px
	justify-content center

.search-fr-image
	widthZ 40px
	opacity .6
	
.home-live-fl
	width 100px
	height 100px
	justify-content center
	align-items center

.status-app
	position fixed
	left 0
	right 0
	top 0
	background-color #111118